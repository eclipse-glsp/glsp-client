{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "[Client] Build all",
      "detail": "Build all glsp-client packages & examples",
      "type": "shell",
      "group": "build",
      "command": "yarn",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": [
        "$tsc",
        "$tslint5"
      ]
    },
    {
      "label": "[Client] Watch all",
      "detail": "Watch all glsp-client packages & examples",
      "type": "shell",
      "group": "build",
      "command": "yarn watch",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": [
        "$tsc-watch"
      ]
    },
    {
      "label": "[Client] Open Workflow example (Chrome)",
      "type": "shell",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "command": "google-chrome examples/workflow-standalone/app/diagram.html"
    }
  ]
}
