{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build glsp-client",
      "type": "shell",
      "group": "build",
      "command": "yarn",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": [
        "$tsc",
        "$tslint5"
      ]
    },
    {
      "label": "Watch glsp-client",
      "type": "shell",
      "group": "build",
      "command": "yarn watch",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": [
        "$tsc-watch"
      ]
    }
  ]
}
